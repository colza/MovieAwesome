<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.kun.movieisawesome.model.ModelGeneral"></import>
        <import type="com.kun.movieisawesome.model.ModelConfigImage"></import>
        <import type="android.view.ViewGroup.LayoutParams"></import>
        <variable
            name="modelGeneral"
            type="ModelGeneral"/>
        <variable
            name="isDetail"
            type="Boolean"/>

        <variable
            name="modelConfigImage"
            type="ModelConfigImage"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/poster"
                android:background="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:imageUrl="@{modelConfigImage.base_url+modelConfigImage.poster_sizes.get(3)+modelGeneral.showImage}"
                />
            <!--android:layout_width="@{isDetail ? match_parent : wrap_content}"-->
            <!--android:layout_width="@{isDetail ? LayoutParams.MATCH_PARENT : LayoutParams.WRAP_CONTENT}"-->
            <!--android:tag="@{modelConfigImage.base_url+modelConfigImage.poster_sizes.get(3)+modelGeneral.showImage}"-->
            <include
                layout="@layout/text_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:modelGeneral="@{modelGeneral}"></include>
            <!--android:layout_toRightOf="@{isDetail ? @+id/poster : 0}"-->
            <!--android:layout_below="@{isDetail ? @+id/poster : 0}"-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>